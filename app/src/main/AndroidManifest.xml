            android:name="com.example.sl_project.login.FirstActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.sl_project.login.LoginActivity" />
        <activity android:name="com.example.sl_project.login.SignupActivity" />
        <activity android:name="com.example.sl_project.transactions.TransactionListActivity"
